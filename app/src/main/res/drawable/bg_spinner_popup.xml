<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- 드롭다운 배경색 (현재 톤 유지) -->
    <solid android:color="#2B2340"/>
    <!-- 라운드 -->
    <corners android:radius="12dp"/>
    <!-- 외곽선: 스피너 outline과 톤 맞춤 -->
    <stroke android:width="1dp" android:color="#FDCA60"/>
    <!-- ★ 여백 제거 -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"/>
</shape>
