<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginTop="0dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="22dp"
    app:cardBackgroundColor="#FF352D49"
    app:strokeWidth="2dp"
    app:strokeColor="#000000"
    android:padding="16dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="18dp"
        android:paddingBottom="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDeepTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fortune_deep_title"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:letterSpacing="0.02"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipKpis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipSpacingHorizontal="8dp"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLuckyTime"
                        style="@style/Widget.Material3.Chip.Assist.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fortune_deep_chip_time"
                        app:chipBackgroundColor="#FDCA60"
                        app:chipStrokeColor="#33FFFFFF"
                        app:chipStrokeWidth="1dp"
                        android:textColor="#212121"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLuckyNumber"
                        style="@style/Widget.Material3.Chip.Assist.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fortune_deep_chip_number"
                        app:chipBackgroundColor="#FDCA60"
                        app:chipStrokeColor="#33FFFFFF"
                        app:chipStrokeWidth="1dp"
                        android:textColor="#212121"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLuckyColor"
                        style="@style/Widget.Material3.Chip.Assist.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fortune_deep_chip_color"
                        app:chipBackgroundColor="#1AFFFFFF"
                        app:chipStrokeColor="#33FFFFFF"
                        app:chipStrokeWidth="1dp"
                        android:textColor="#212121"/>
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#FFC855"/>

            <TextView
                android:id="@+id/labelHighlights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/fortune_deep_highlights_label"
                android:textSize="12sp"
                android:textColor="#FDCA60"
                android:letterSpacing="0.05"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/tvDeepHighlights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#EAF2FA"
                android:textSize="15sp"
                android:lineHeight="22sp"/>

            <TextView
                android:id="@+id/labelPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/fortune_deep_plan_label"
                android:textSize="12sp"
                android:textColor="#FDCA60"
                android:letterSpacing="0.05"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#D4281C3C"
                    app:strokeColor="#FDCA60"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.05"
                            android:text="@string/fortune_deep_plan_morning"
                            android:textAllCaps="true"
                            android:textColor="#FDCA60"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvPlanMorning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:lineHeight="22sp"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#D4281C3C"
                    app:strokeColor="#FDCA60"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.05"
                            android:text="@string/fortune_deep_plan_afternoon"
                            android:textAllCaps="true"
                            android:textColor="#FDCA60"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvPlanAfternoon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:lineHeight="22sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#D4281C3C"
                    app:strokeColor="#FDCA60"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fortune_deep_plan_evening"
                            android:textColor="#FDCA60"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05"/>

                        <TextView
                            android:id="@+id/tvPlanEvening"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:lineHeight="22sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <TextView
                android:id="@+id/labelTomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/fortune_deep_tomorrow_label"
                android:textSize="12sp"
                android:textColor="#FDCA60"
                android:letterSpacing="0.05"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/tvDeepTomorrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:lineHeight="22sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeepClose"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/close"
                app:backgroundTint="#FDCA60"
                android:fontFamily="@font/pretendard_medium"
                app:useMaterialThemeColors="false"
                android:textColor="#000000"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.google.android.material.card.MaterialCardView>
