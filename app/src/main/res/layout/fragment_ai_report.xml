<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9E5"
    android:fitsSystemWindows="true">

    <!-- Scrollable 콘텐츠 -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adView_ai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/report_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="36dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#EDEDF2"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="22dp">

                    <ImageView
                        android:id="@+id/main_symbol"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginBottom="6dp"
                        android:src="@drawable/ic_dream_night"
                        android:contentDescription="@string/dream_icon_desc"/>

                    <TextView
                        android:id="@+id/title_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주간 꿈 리포트"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#6C3DF4"
                        android:fontFamily="@font/pretendard_bold"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:id="@+id/empty_icon_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/empty_icon"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_no_data"/>

                        <TextView
                            android:id="@+id/empty_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="꿈 분석 데이터가 부족해요"
                            android:textColor="#B0A9CF"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:id="@+id/empty_sub_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="꿈을 꾸고 기록하면\nAI 분석 결과가 나타납니다"
                            android:textColor="#7A55D3"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_marginTop="3dp"/>
                    </LinearLayout>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/emotion_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="12dp"
                        android:background="@android:color/transparent"
                        android:elevation="6dp"/>

                    <TextView
                        android:id="@+id/text_keywords"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="감정: ...\n키워드: ..."
                        android:textSize="14sp"
                        android:textColor="#1FC17C"
                        android:fontFamily="@font/pretendard_medium"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/text_ai_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AI 분석 : ..."
                        android:textSize="15sp"
                        android:textColor="#5C35D6"
                        android:fontFamily="@font/pretendard_medium"
                        android:gravity="start|top"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_back_home"
                        android:layout_width="200dp"
                        android:layout_height="48dp"
                        android:text="@string/btn_back_home"
                        android:textSize="15sp"
                        app:cornerRadius="24dp"
                        app:backgroundTint="#7A55D3"
                        android:textColor="#fff"
                        app:icon="@drawable/ic_back"
                        app:iconPadding="8dp"
                        app:iconTint="#fff"
                        app:iconGravity="textStart"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1742201279182732/8682841157"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
