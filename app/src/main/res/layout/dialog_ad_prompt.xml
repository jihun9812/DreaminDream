<!-- file: res/layout/dialog_ad_prompt.xml -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#26FFFFFF"
    app:cardBackgroundColor="#0F1523">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- 제목 -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="맞춤 해몽을 준비 중이에요"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:lineHeight="24sp"/>

        <!-- 보조 설명 -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="잠시만요! 광고를 보고나면 심화 해석이 열려요."
            android:textColor="#B9C7D6"
            android:textSize="14sp"
            android:lineHeight="20sp"/>

        <!-- 진행 표시 -->
        <ProgressBar
            android:id="@+id/progressAd"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:indeterminate="true"
            android:indeterminateTint="#7A6CF1"
            android:indeterminateTintMode="src_in"/>

        <!-- 구분선 (은은) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#253041"/>

        <!-- 버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- 취소(보조) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textSize="14sp"
                app:backgroundTint="#1AFFFFFF"
                app:strokeColor="#26FFFFFF"
                app:strokeWidth="1dp"
                android:textColor="#EAF2FA"/>

            <!-- 광고 보기(주 버튼) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWatchAd"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="광고 보기"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:backgroundTint="#7A6CF1"
                app:rippleColor="#33FFFFFF"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
