<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground"
    android:fitsSystemWindows="true">

    <!-- 상단 타이틀 바 (RelativeLayout로 변경, 중앙 배치) -->
    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="12dp">

        <!-- 캘린더 달 아이콘 (진짜 중앙) -->
        <ImageView
            android:id="@+id/calendarMoonIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_calendar_moon"
            android:contentDescription="캘린더 아이콘"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- 공휴일 이름 (더 작게) -->
    <TextView
        android:id="@+id/holidayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <!-- 월 셀렉터 (더 작게) -->
    <LinearLayout
        android:id="@+id/monthSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/holidayTextView"
        android:layout_marginTop="-20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonPreviousMonth"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_chevron_left"
            android:contentDescription="@string/prev_month"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textViewMonthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025년 7월"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginHorizontal="12dp" />

        <ImageButton
            android:id="@+id/buttonNextMonth"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="@string/next_month"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- 캘린더 뷰 (더 작게, 여백 줄임) -->

    <!-- 꿈 리스트 (더 많은 공간 확보) -->

    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthSelector"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="35dp"
        android:background="#AD4E4E4E"
        app:cv_dayViewResource="@layout/example_day_view"
        app:cv_monthHeaderResource="@layout/example_month_header" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDreams"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/calendarView"
        android:layout_above="@id/adViewCalendar"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="60dp"
        android:clipToPadding="false" />

    <!-- 광고 -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1742201279182732/8682841157" />
</RelativeLayout>
