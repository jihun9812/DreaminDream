<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1️⃣ 외곽 글로우: 퍼지는 빛 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <stroke
                android:width="3dp"
                android:color="#55FDCA60" /> <!-- brand gold glow -->
        </shape>
    </item>

    <!-- 2️⃣ 위쪽 하이라이트 (빛 반사) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
            android:startColor="#66FFFFFF"
            android:centerColor="#00FFFFFF"
            android:endColor="#00000000"
            android:type="linear" />
            <corners android:radius="22dp" />
        </shape>
    </item>

    <!-- 3️⃣ 아래쪽 그림자 (볼록 효과 강조) -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
            android:startColor="#22000000"
            android:endColor="#00000000"
            android:type="linear" />
            <corners android:radius="22dp" />
        </shape>
    </item>

    <!-- 4️⃣ 윤곽선 (유리 느낌 강화용) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <stroke android:width="1dp" android:color="#80FFFFFF" />
        </shape>
    </item>
</layer-list>
