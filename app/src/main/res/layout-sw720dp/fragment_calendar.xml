<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground"
    android:fitsSystemWindows="true">

    <!-- 하단 고정 배너 -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1742201279182732/8682841157"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 좌/우 분할: 달력이 52% 영역 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.52" />

    <!-- ================= LEFT : 달력(왼쪽 중앙, 크게) ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leftPane"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adViewCalendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineMid">

        <!-- 달력 + 월 헤더를 묶어서 수직 중앙 배치 -->
        <LinearLayout
            android:id="@+id/calendarGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <!-- 월 이동 (달력 위에 붙임 = 함께 이동) -->
            <LinearLayout
                android:id="@+id/monthSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageButton
                    android:id="@+id/buttonPreviousMonth"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_chevron_left"
                    android:contentDescription="@string/prev_month"
                    app:tint="#FDCA60" />

                <TextView
                    android:id="@+id/textViewMonthYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:text="2025년 9월"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FABE41"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:id="@+id/buttonNextMonth"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_chevron_right"
                    android:contentDescription="@string/next_month"
                    app:tint="#FDCA60" />
            </LinearLayout>

            <TextView
                android:id="@+id/holidayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#EB5D56"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:visibility="gone" />

            <!-- 달력 카드 -->
            <FrameLayout
                android:id="@+id/calendarWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:background="@drawable/bg_calendar_rounded"
                android:elevation="8dp"
                android:minWidth="600dp"
                android:maxWidth="920dp"
                android:minHeight="340dp">

                <com.kizitonwose.calendar.view.CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cv_dayViewResource="@layout/example_day_view"
                    app:cv_monthHeaderResource="@layout/example_month_header" />
            </FrameLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= RIGHT : 꿈 리스트 ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rightPane"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adViewCalendar"
        app:layout_constraintStart_toStartOf="@id/guidelineMid"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/dreamListContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <TextView
                android:id="@+id/dreamListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2025-09-22 (월)의 꿈들"
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="#FDCA60"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/emptyDreamText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="이 날짜의 꿈 기록이 없어요."
                android:textSize="15sp"
                android:textColor="#DDECF6"
                android:includeFontPadding="false"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDreams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <ScrollView
                android:id="@+id/detailScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:id="@+id/dreamDetailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />
            </ScrollView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
