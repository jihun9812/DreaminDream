<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dreamindream">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <application
        android:allowBackup="true"
        android:label="DreaminDream"
        android:icon="@mipmap/starcloud"
        android:roundIcon="@mipmap/starcloud"
        android:supportsRtl="true"
        android:theme="@style/Theme.DreaminDream">

        <activity
            android:name=".FeedbackActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".TermsActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:exported="true"
            android:windowSoftInputMode="adjustResize|stateUnspecified" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.dreamindream.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <property
            android:name="android.adservices.AD_SERVICES_CONFIG"
            android:resource="@xml/gma_ad_services_config"
            tools:replace="android:resource" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1742201279182732~2775090110" />



        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.DreaminDream.TransparentFullScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.DreaminDream">

            <!-- ✅ 인증 메일 링크 처리 -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="dreamindream.app"
                    android:pathPrefix="/__/auth/action" />
            </intent-filter>
        </activity>
    </application>
</manifest>
