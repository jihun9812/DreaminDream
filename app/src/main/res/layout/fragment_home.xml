<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground">

    <!-- 설정 버튼 -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        android:src="@drawable/ic_setting"
        android:background="@android:color/transparent"
        android:contentDescription="Settings Button" />

    <!-- 메인 콘텐츠 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- 타이틀 -->
        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:fontFamily="@font/jalnan"
            android:shadowColor="#FDAC05"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="Dream In Dream"
            android:textColor="#FABE41"
            android:textSize="35sp" />

        <!-- AI 꿈 리포트 카드뷰 (카드 자체 클릭/포커스 비활성) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ai_report_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:clickable="false"
            android:focusable="false"
            app:cardBackgroundColor="#FF352D49"
            app:cardCornerRadius="20dp"
            app:cardElevation="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                android:foreground="@android:color/transparent">

                <!-- 리포트 아이콘 -->
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="AI Report Icon"
                    android:src="@drawable/ic_ai_report" />

                <!-- 요약 내용(안전하게 클릭 불가 지정) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:clickable="false"
                    android:focusable="false">

                    <TextView
                        android:id="@+id/ai_report_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="이번 주 꿈 분석 요약"
                        android:textColor="#E4E2E2"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:hyphenationFrequency="none"
                        android:breakStrategy="balanced"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeMaxTextSize="15sp"
                        app:autoSizeStepGranularity="1sp"
                        android:clickable="false"
                        android:focusable="false" />

                    <TextView
                        android:id="@+id/ai_report_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text=" "
                        android:textColor="#C6D4DF"
                        android:textSize="13sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>

                <!-- AI 리포트 버튼(이것만 동작) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ai_report"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="AI 리포트"
                    android:textColor="#17212B"
                    android:textSize="12sp"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_gold_gloss_selector"
                    app:rippleColor="#33FFFFFF"
                    app:cornerRadius="16dp"
                    android:elevation="6dp"
                    android:translationZ="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 캐릭터 말풍선 -->
        <LinearLayout
            android:id="@+id/character_bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <ImageView
                android:id="@+id/ai_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="AI 캐릭터"
                android:src="@drawable/home_message" />

            <TextView
                android:id="@+id/ai_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:text="오늘의 행운 메시지를 불러오는 중이에요..."
                android:textColor="@color/white"
                android:textSize="13sp"
                android:includeFontPadding="true"
                android:lineSpacingExtra="2dp"
                android:breakStrategy="balanced"
                android:hyphenationFrequency="full"
                android:ellipsize="none"
                android:singleLine="false"
                android:maxLines="5"
                android:translationZ="1dp" />
        </LinearLayout>

        <!-- 버튼 그룹 -->
        <LinearLayout
            android:id="@+id/button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 해몽 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dream"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="@string/btn_dream"
                android:textColor="#17212B"
                android:textSize="14sp"
                app:backgroundTint="@null"
                android:background="@drawable/btn_gold_gloss_selector"
                app:cornerRadius="16dp"
                app:rippleColor="#33FFFFFF"
                app:icon="@drawable/ic_dream"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconSize="18dp"
                app:iconTint="#17212B"
                android:elevation="8dp"
                android:translationZ="2dp"/>

            <Space
                android:layout_width="24dp"
                android:layout_height="wrap_content"/>

            <!-- 꿈달력 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_calendar"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="@string/btn_calendar"
                android:textColor="#17212B"
                android:textSize="14sp"
                app:backgroundTint="@null"
                android:background="@drawable/btn_gold_gloss_selector"
                app:cornerRadius="16dp"
                app:rippleColor="#33FFFFFF"
                app:icon="@drawable/ic_calendar_moon"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconSize="18dp"
                app:iconTint="#17212B"
                android:elevation="8dp"
                android:translationZ="2dp"/>

            <Space
                android:layout_width="24dp"
                android:layout_height="wrap_content"/>

            <!-- 행운보기 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fortune"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="@string/btn_fortune"
                android:textColor="#17212B"
                android:textSize="14sp"
                app:backgroundTint="@null"
                android:background="@drawable/btn_gold_gloss_selector"
                app:cornerRadius="16dp"
                app:rippleColor="#33FFFFFF"
                app:icon="@drawable/ic_fortune"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconSize="18dp"
                app:iconTint="#17212B"
                android:elevation="8dp"
                android:translationZ="2dp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
