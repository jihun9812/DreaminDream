<!-- file: res/layout/dialog_ad_prompt.xml -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="8dp"
    app:strokeWidth="2dp"
    app:strokeColor="#2C000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/bg_glass_ad_section"
       >

        <!-- 제목 -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ad_prompt_title"
            android:textColor="#E5FAFD"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.07"
            android:lineHeight="24sp"/>

        <!-- 보조 설명 -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.07"
            android:text="@string/ad_prompt_status"
            android:textColor="#E5FAFD"
            android:textSize="15sp"
            android:lineHeight="20sp"/>

        <!-- 진행 표시 (M3 원형 인디케이터) -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressAd"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            app:indicatorSize="32dp"
            app:indicatorColor="#7A6CF1"
            app:trackColor="#253041"
            android:indeterminate="true"/>

        <!-- 구분선 (은은) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#253041"/>

        <!-- 버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- 취소 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:minHeight="0dp"
                android:text="@string/ad_prompt_cancel"
                android:textSize="14sp"
                app:backgroundTint="#C3C2C2"
                android:textColor="#050505"
                app:strokeColor="#0DFFFFFF"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                app:cornerRadius="16dp"/>

            <!-- 광고 보기 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWatchAd"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginStart="10dp"
                android:minHeight="0dp"
                android:backgroundTint="#FDCA60"
                android:fontFamily="@font/pretendard_medium"
                android:minWidth="0dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:text="@string/ad_prompt_watch_ad"
                android:textColor="#040404"
                android:textSize="14sp"
                app:cornerRadius="16dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
