<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/root_fortune_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground"
    android:fitsSystemWindows="true"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <!-- 컴팩트 헤더 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/heroCard"
        android:layout_width="0dp"
        android:layout_height="84dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_glass_card"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/fortune_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_fortune" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/heroTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 맞춤 운세"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/heroSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로필 기반 · AI 해석 · 간결한 조언"
                    android:textColor="#B3FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 큰 사각 CTA -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/fortuneButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="14dp"
        android:text="@string/btn_fortune"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#FFFFFF"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="16dp"
        android:background="@drawable/btn_primary_fortune_rect"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/heroCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 로딩 -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fortune_loading"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:elevation="12dp"
        app:lottie_rawRes="@raw/generator"
        app:lottie_loop="true"
        app:layout_constraintTop_toBottomOf="@id/fortuneButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 결과 카드 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fortuneCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="14dp"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:strokeColor="#26FFFFFF"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="#15202A"
        app:layout_constraintTop_toBottomOf="@id/fortuneButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:id="@+id/resultScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:overScrollMode="ifContentScrolls"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:minHeight="160dp"
            android:fadeScrollbars="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/resultContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingBottom="12dp">

                <!-- 키워드 칩 -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:fillViewport="true">
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipsFortune"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        app:singleLine="true"
                        app:singleSelection="false"
                        app:chipSpacingHorizontal="6dp" />
                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#12FFFFFF" />

                <!-- 행운 지표 -->
                <LinearLayout
                    android:id="@+id/fortuneKpis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <View
                            android:id="@+id/viewLuckyColor"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="#FFD54F"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="행운색"
                            android:textSize="12sp"
                            android:textColor="#B3FFFFFF"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvLuckyNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="42"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="행운 숫자"
                            android:textSize="12sp"
                            android:textColor="#B3FFFFFF"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvLuckyTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오전 10시"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="좋은 시간"
                            android:textSize="12sp"
                            android:textColor="#B3FFFFFF"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 감정 분포 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="감정 밸런스"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginBottom="6dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/barPos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:trackThickness="12dp"
                            app:indicatorColor="#76FF03"
                            app:trackColor="#1FFFFFFF" />
                        <TextView
                            android:id="@+id/tvPos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80%"
                            android:textColor="#CFEAD1"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/barNeu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:trackThickness="12dp"
                            app:indicatorColor="#29B6F6"
                            app:trackColor="#1FFFFFFF" />
                        <TextView
                            android:id="@+id/tvNeu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15%"
                            android:textColor="#C6D4DF"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/barNeg"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:trackThickness="12dp"
                            app:indicatorColor="#EF5350"
                            app:trackColor="#1FFFFFFF" />
                        <TextView
                            android:id="@+id/tvNeg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5%"
                            android:textColor="#F2B8B5"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- ▼ 세부 해석 토글 + 컨테이너(동적 렌더링) -->
                <TextView
                    android:id="@+id/btnDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="세부 해석 보기 ▾"
                    android:textColor="#C6D4DF"
                    android:textSize="13sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>

                <LinearLayout
                    android:id="@+id/sectionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="#12FFFFFF" />

                <!-- 오늘의 체크리스트 -->
                <LinearLayout
                    android:id="@+id/layoutChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘의 체크"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>
                    <CheckBox
                        android:id="@+id/cbAction1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="중요 연락 하나 보내기"
                        android:textColor="#FFFFFF"/>
                    <CheckBox
                        android:id="@+id/cbAction2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15분 정리/정돈"
                        android:textColor="#FFFFFF"/>
                    <CheckBox
                        android:id="@+id/cbAction3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="소액 투자/저축 점검"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="#12FFFFFF" />

                <!-- ✅ 심화 분석 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeep"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:text="심화 분석 보기"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_fortune"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:backgroundTint="#7A6CF1"
                    app:rippleColor="#33FFFFFF" />

                <!-- 복사/공유 -->
                <LinearLayout
                    android:id="@+id/layoutQuickActions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btnCopy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복사"
                        android:textColor="#C6D4DF"
                        android:padding="6dp" />
                    <TextView
                        android:id="@+id/btnShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공유"
                        android:textColor="#C6D4DF"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- 운세 본문 -->
                <TextView
                    android:id="@+id/fortune_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:lineSpacingExtra="6dp"
                    android:letterSpacing="0.01"
                    android:fontFamily="@font/pretendard_medium" />
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- 하단 배너 광고 -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_fortune"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1742201279182732/8682841157"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Space
        android:id="@+id/adSpacer"
        android:layout_width="0dp"
        android:layout_height="14dp"
        app:layout_constraintBottom_toTopOf="@id/adView_fortune"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
