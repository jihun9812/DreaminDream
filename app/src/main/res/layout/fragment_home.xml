<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground">

    <!-- 설정 버튼 -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        android:src="@drawable/ic_setting"
        android:background="@android:color/transparent"
        android:contentDescription="Settings Button" />

    <!-- 메인 콘텐츠 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- 타이틀 -->
        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="Dream In Dream"
            android:textColor= "#C32986DC"
            android:shadowColor="#C3ADE6FF"
            android:textSize="35sp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"/>

        <!-- AI 꿈 리포트 카드뷰 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ai_report_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:cardBackgroundColor= "#FF0C2C44"
            app:cardCornerRadius="20dp"
            app:cardElevation="13dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- 리포트 아이콘 -->
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="AI Report Icon"
                    android:src="@drawable/ic_ai_report" />

                <!-- 요약 내용 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ai_report_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="이번 주 꿈 분석 요약"
                        android:textColor="#E4E2E2"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/ai_report_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="  "
                        android:textColor="#666"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ai_report"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginStart="12dp"
                    android:elevation="0dp"
                    android:text="AI 리포트"
                    android:textColor="#fff"
                    app:backgroundTint="#3D6C89"
                    app:cornerRadius="18dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 캐릭터 말풍선 -->
        <LinearLayout
            android:id="@+id/character_bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ai_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="AI 캐릭터"
                android:src="@drawable/home_message" />

            <TextView
                android:id="@+id/ai_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="오늘의 행운 메시지를 불러오는 중이에요..."
                android:translationZ="1dp" />
        </LinearLayout>

        <!-- 버튼 그룹 -->
        <LinearLayout
            android:id="@+id/button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 해몽 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#0C2C44"
                android:elevation="16dp"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/btn_dream"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationZ="4dp"
                app:icon="@drawable/ic_dream"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:iconTint="@color/white"

                />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- 캘린더 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#0C2C44"
                android:elevation="16dp"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/btn_calendar"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationZ="4dp"
                app:icon="@drawable/ic_calendar_moon"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:iconTint="@color/white" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- 운세 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fortune"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#0C2C44"
                android:elevation="16dp"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/btn_fortune"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:translationZ="4dp"
                app:icon="@drawable/ic_fortune"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:iconTint="@color/white" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
