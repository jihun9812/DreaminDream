<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground"
    android:fitsSystemWindows="true"
    android:forceDarkAllowed="false"
    android:paddingStart="@dimen/content_side_padding"
    android:paddingEnd="@dimen/content_side_padding">

    <LinearLayout
        android:id="@+id/empty_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_no_data" />

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/ai_report_empty"
            android:textColor="#9FB2C3"
            android:textSize="@dimen/text_sm" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/report_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/ai_card_corner"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/adView_ai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/ai_card_max_width"
        app:strokeColor="#1D1D1D"
        app:strokeWidth="1dp">

        <FrameLayout
            android:id="@+id/report_card_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_panel_glass"
            android:clipToOutline="true"
            android:padding="@dimen/card_pad">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/ai_icon"
                        android:layout_height="@dimen/ai_icon"
                        android:src="@drawable/ic_chart" />

                    <TextView
                        android:id="@+id/week_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/pretendard_bold"
                        android:maxLines="2"
                        android:text="@string/ai_report_week_label_default"
                        android:textColor="#E1F0FA"
                        android:textSize="@dimen/ai_sub" />

                    <TextView
                        android:id="@+id/btn_history"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:background="@drawable/bg_chip_glass"
                        android:minHeight="32dp"
                        android:paddingStart="12dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="6dp"
                        android:text="@string/ai_report_history"
                        android:textColor="#E1F0FA"
                        android:textSize="@dimen/text_xs"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/divider_margin_top"
                    android:layout_marginBottom="@dimen/divider_margin_bottom"
                    android:background="#FFD54F" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/card_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:fillViewport="true"
                    android:overScrollMode="never">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/kpi_card_height"
                                android:layout_marginEnd="@dimen/kpi_gap_h"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="0dp"
                                app:strokeColor="#2EFFFFFF"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/kpi_positive"
                                        android:fontFamily="@font/pretendard_medium"
                                        android:textColor="#89EFCB"
                                        android:textSize="@dimen/kpi_label" />

                                    <TextView
                                        android:id="@+id/kpi_positive"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/value_placeholder_dash"
                                        android:textColor="#E7FFF6"
                                        android:textSize="@dimen/kpi_value"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/kpi_card_height"
                                android:layout_marginStart="@dimen/kpi_gap_h"
                                android:layout_marginEnd="@dimen/kpi_gap_h"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="0dp"
                                app:strokeColor="#2EFFFFFF"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/kpi_neutral"
                                        android:fontFamily="@font/pretendard_medium"
                                        android:textColor="#BFCBD1"
                                        android:textSize="@dimen/kpi_label" />

                                    <TextView
                                        android:id="@+id/kpi_neutral"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/value_placeholder_dash"
                                        android:textColor="#F0F6FB"
                                        android:textSize="@dimen/kpi_value"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/kpi_card_height"
                                android:layout_marginStart="@dimen/kpi_gap_h"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="0dp"
                                app:strokeColor="#2EFFFFFF"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/kpi_negative"
                                        android:fontFamily="@font/pretendard_medium"
                                        android:textColor="#FB99AD"
                                        android:textSize="@dimen/kpi_label" />

                                    <TextView
                                        android:id="@+id/kpi_negative"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/value_placeholder_dash"
                                        android:textColor="#FFD9E1"
                                        android:textSize="@dimen/kpi_value"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="@dimen/section_margin_bottom"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/chart_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_medium"
                                android:layout_weight="1"
                                android:text="@string/chart_emotion_balance"
                                android:textColor="#FDCA60"
                                android:textSize="@dimen/section_title_text"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_chart_info"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/chart_info_desc"
                                android:padding="6dp"
                                android:scaleType="centerInside"
                                app:srcCompat="@android:drawable/ic_dialog_info" />
                        </LinearLayout>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/emotion_bar_chart"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/chart_emotion_height"
                            android:layout_marginBottom="@dimen/section_margin_bottom"
                            android:background="@android:color/transparent"
                            android:elevation="0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/section_margin_top"
                            android:layout_marginBottom="@dimen/section_margin_bottom"
                            android:text="@string/chart_theme"
                            android:fontFamily="@font/pretendard_medium"
                            android:textColor="#FDCA60"
                            android:textSize="@dimen/section_title_text"
                            android:textStyle="bold" />

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/theme_bar_chart"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/chart_theme_height"
                            android:layout_marginBottom="@dimen/section_margin_bottom"
                            android:background="@android:color/transparent"
                            android:elevation="0dp" />

                        <TextView
                            android:id="@+id/chart_caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/section_margin_bottom"
                            android:text="@string/chart_caption"
                            android:textColor="#FDCA60"
                            android:textSize="@dimen/caption_text" />

                        <TextView
                            android:id="@+id/text_keywords"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_medium"
                            android:layout_marginBottom="@dimen/section_margin_bottom"
                            android:text="@string/chart_keywords_placeholder"
                            android:textColor="#CBDAE4"
                            android:textSize="@dimen/body_text" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/section_margin_top"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_pro_upgrade"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/ai_btn_height"
                                android:backgroundTint="@null"
                                android:text="@string/btn_pro_upgrade"
                                android:fontFamily="@font/pretendard_medium"
                                android:textAllCaps="false"
                                android:textColor="#352D00"
                                android:textSize="@dimen/text_sm"
                                android:textStyle="bold"
                                app:cornerRadius="@dimen/btn_radius" />

                            <TextView
                                android:id="@+id/label_refresh_hint"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/empty_string"
                                android:textColor="#FFDFA6"
                                android:textSize="@dimen/text_xs"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/analysis_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/section_margin_top"
                            android:background="@drawable/bg_deep_section"
                            android:orientation="vertical"
                            android:padding="@dimen/card_pad">

                            <TextView
                                android:id="@+id/analysis_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ai_analysis_title"
                                android:textColor="#FDCA60"
                                android:textSize="@dimen/section_title_text"
                                android:fontFamily="@font/pretendard_bold" />

                            <TextView
                                android:id="@+id/text_ai_comment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:breakStrategy="balanced"
                                android:hyphenationFrequency="normal"
                                android:includeFontPadding="false"
                                android:justificationMode="inter_word"
                                android:letterSpacing="0.01"
                                android:fontFamily="@font/pretendard_medium"
                                android:lineSpacingExtra="@dimen/body_line_space"
                                android:lineSpacingMultiplier="1.12"
                                android:text="@string/ai_analysis_placeholder"
                                android:textColor="#F3F8FC"
                                android:textSize="@dimen/body_text" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="12dp"
        app:adSize="BANNER"
        app:adUnitId="@string/ad_unit_ai_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/pro_spinner"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        app:indicatorSize="28dp"
        app:layout_constraintBottom_toBottomOf="@id/report_card"
        app:layout_constraintEnd_toEndOf="@id/report_card"
        app:trackThickness="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>