<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dreamindream">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:label="DreaminDream"
        android:icon="@mipmap/starcloud"
        android:roundIcon="@mipmap/starcloud"
        android:supportsRtl="true"
        android:theme="@style/Theme.DreaminDream">

        <!-- AdMob 앱 ID -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1742201279182732~2775090110" />

        <!-- SplashActivity: 앱 실행 진입점 -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.DreaminDream.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- 홈 화면을 포함한 실제 앱 화면 -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />


    </application>

</manifest>
