<!-- file: res/layout/dialog_ad_prompt.xml -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#26FFFFFF"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp"
        android:background="@drawable/bg_glass_ad_section">

        <!-- 제목 -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="맞춤 해몽을 준비 중이에요"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:lineHeight="24sp"/>

        <!-- 보조 설명 -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="잠시만요! 광고를 보고나면 심화 해석이 열려요."
            android:textColor="#B9C7D6"
            android:textSize="14sp"
            android:lineHeight="20sp"/>

        <!-- 진행 표시 (M3 원형 인디케이터) -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressAd"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            app:indicatorSize="32dp"
            app:indicatorColor="#7A6CF1"
            app:trackColor="#253041"
            android:indeterminate="true"/>

        <!-- 구분선 (은은) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#253041"/>

        <!-- 버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- 취소: 아웃라인 보라톤 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:minHeight="0dp"
                android:text="취소"
                android:textSize="14sp"
                app:backgroundTint="#434343"
                android:textColor="#EAF2FA"
                app:strokeColor="#0DFFFFFF"
                app:strokeWidth="1dp"
                app:rippleColor="#36FFFFFF"
                app:cornerRadius="16dp"/>

            <!-- 광고 보기: 골드 글로시(노란색), 대기업 톤 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWatchAd"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:text="광고 보기"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#29203A"
                app:backgroundTint="@null"
                android:background="@drawable/btn_gold_gloss_selector"
                app:rippleColor="#207A6CF1"
                app:cornerRadius="16dp"/>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
