<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/row_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 콘텐츠 + 체크 아이콘 오버레이 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/row_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-10-20"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#1F2234"/>

                <TextView
                    android:id="@+id/row_dream"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="(꿈 텍스트 없음)"
                    android:textSize="14sp"
                    android:textColor="#1F2234"/>

                <TextView
                    android:id="@+id/row_interp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="#5A6275"/>
            </LinearLayout>

            <!-- ✅ 선택 시 표시되는 체크 아이콘 오버레이 -->
            <ImageView
                android:id="@+id/row_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|top"
                android:layout_margin="8dp"
                android:src="@android:drawable/checkbox_on_background"
                android:contentDescription="@string/checked"
                android:visibility="gone"/>
        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
