<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9E5">

    <!-- 설정 버튼 -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_setting"
        android:background="@android:color/transparent"
        android:contentDescription="Settings Button" />

    <!-- 메인 콘텐츠 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- 타이틀 -->
        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="DREAM IN DREAM"
            android:textColor="#7A55D3"
            android:textSize="23sp" />

        <!-- AI 꿈 리포트 카드뷰 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ai_report_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:cardBackgroundColor="#ECE6FF"
            app:cardCornerRadius="20dp"
            app:cardElevation="13dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- 리포트 아이콘 -->
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="AI Report Icon"
                    android:src="@drawable/ic_ai_report" />

                <!-- 요약 내용 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ai_report_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="이번 주 꿈 분석 요약"
                        android:textColor="#4A148C"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/ai_report_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="  "
                        android:textColor="#666"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ai_report"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginStart="12dp"
                    android:elevation="0dp"
                    android:text="AI 리포트"
                    android:textColor="#fff"
                    app:backgroundTint="#7A55D3"
                    app:cornerRadius="18dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 캐릭터 말풍선 -->
        <LinearLayout
            android:id="@+id/character_bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ai_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="AI 캐릭터"
                android:src="@drawable/home_message" />

            <TextView
                android:id="@+id/ai_message"
                style="@style/BubbleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="오늘의 행운 메시지를 불러오는 중이에요..." />
        </LinearLayout>

        <!-- 버튼 그룹 -->
        <Button
            android:id="@+id/btn_dream"
            style="@style/GlassButton"
            android:text="@string/btn_dream"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_calendar"
            style="@style/GlassButton"
            android:layout_marginTop="16dp"
            android:text="@string/btn_calendar"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_fortune"
            style="@style/GlassButton"
            android:layout_marginTop="16dp"
            android:text="@string/btn_fortune"
            android:textColor="@color/black" />

    </LinearLayout>
</RelativeLayout>
