<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/root_fortune_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground"
    android:fitsSystemWindows="true"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="0dp">

    <!-- 시작 버튼 (정사각/중앙) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/fortuneButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="운세\n보기"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/fortune_button_bg"
        app:backgroundTint="@null"
        app:cornerRadius="20dp"
        app:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4"/>

    <!-- 로딩 애니 -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fortune_loading"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:elevation="8dp"
        app:lottie_rawRes="@raw/generator"
        app:lottie_loop="true"
        app:layout_constraintTop_toBottomOf="@id/fortuneButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 결과 카드 (내부 여백 최소화 + 광고와 6dp 간격, 내용이 적으면 wrap) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fortuneCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false"
        app:contentPadding="0dp"
        app:cardPreventCornerOverlap="true"
        app:strokeColor="#26FFFFFF"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="#15202A"
        app:layout_constraintTop_toBottomOf="@id/fortuneButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adContainer"
        app:layout_constraintHeight_default="wrap">

        <ScrollView
            android:id="@+id/resultScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:overScrollMode="ifContentScrolls"
            android:clipToPadding="false"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:fadeScrollbars="false"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/resultContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="6dp"
                android:paddingBottom="0dp">

                <!-- 키워드 칩 -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never">
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipsFortune"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        app:singleLine="true"
                        app:chipSpacingHorizontal="4dp" />
                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="6dp"
                    android:background="#12FFFFFF" />

                <!-- 행운 지표 -->
                <LinearLayout
                    android:id="@+id/fortuneKpis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <View
                            android:id="@+id/viewLuckyColor"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginBottom="2dp"
                            android:background="#FFD54F"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="행운색"
                            android:textSize="11sp"
                            android:textColor="#B3FFFFFF"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvLuckyNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="행운 숫자"
                            android:textSize="11sp"
                            android:textColor="#B3FFFFFF"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvLuckyTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오전 10시"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="좋은 시간"
                            android:textSize="11sp"
                            android:textColor="#B3FFFFFF"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 감정 밸런스 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="감정 밸런스"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/barPos"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_weight="1"
                            app:indicatorColor="#66BB6A"
                            app:trackColor="#1FFFFFFF"/>
                        <TextView
                            android:id="@+id/tvPos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textColor="#C6D4DF"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/barNeu"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_weight="1"
                            app:indicatorColor="#75BFFA"
                            app:trackColor="#1FFFFFFF"/>
                        <TextView
                            android:id="@+id/tvNeu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30%"
                            android:textColor="#C6D4DF"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/barNeg"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_weight="1"
                            app:indicatorColor="#EF5350"
                            app:trackColor="#1FFFFFFF"/>
                        <TextView
                            android:id="@+id/tvNeg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10%"
                            android:textColor="#F2B8B5"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 오늘의 체크 -->
                <TextView
                    android:id="@+id/btnDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 체크 ▾"
                    android:textColor="#C6D4DF"
                    android:textSize="13sp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>

                <LinearLayout
                    android:id="@+id/layoutChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="0dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘의 체크"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#12FFFFFF" />

                <!-- 섹션 카드들 -->
                <LinearLayout
                    android:id="@+id/sectionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="0dp"/>

                <!-- 심화 분석 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeep"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="6dp"
                    android:text="심화 분석 보기"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#3D6C89"
                    app:rippleColor="#33FFFFFF" />

                <!-- 복사/공유 -->
                <LinearLayout
                    android:id="@+id/layoutQuickActions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btnCopy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복사"
                        android:textColor="#C6D4DF"
                        android:textSize="13sp"
                        android:padding="4dp" />
                    <TextView
                        android:id="@+id/btnShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공유"
                        android:textColor="#C6D4DF"
                        android:textSize="13sp"
                        android:padding="4dp"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/fortune_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:lineSpacingExtra="5dp"
                    android:letterSpacing="0.01" />
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- 버튼과 광고 사이 간격 -->
    <Space
        android:id="@+id/adSpacer"
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintBottom_toTopOf="@id/adContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단 광고 -->
    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView_fortune"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1742201279182732/8682841157"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
