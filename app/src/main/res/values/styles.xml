<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 앱 테마 -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
    </style>

    <!-- 유리버튼 (Glass Effect) -->
    <style name="GlassButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/button_glass</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <!-- 말풍선 텍스트 -->
    <style name="BubbleText">
        <item name="android:background">@drawable/bubble_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- 카드뷰 스타일 -->
    <style name="DreamCardView" parent="Base.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:backgroundTint">@color/card_background</item>
    </style>

    <!-- 캘린더 날짜 -->
    <style name="CalendarDateText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 캘린더 요일 -->
    <style name="CalendarWeekdayText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#888888</item>
    </style>

    <!-- ✅ DatePicker용 커스텀 테마 -->
\
        <!-- MaterialDatePicker에 적용할 커스텀 스타일 -->
    <style name="MyDatePickerStyle" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorOnPrimary">@color/your_black</item>
        <item name="colorOnSurface">@color/your_black</item>

    </style>



</resources>
