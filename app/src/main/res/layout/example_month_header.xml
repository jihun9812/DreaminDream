<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/month_header_padding_v"
    android:paddingHorizontal="@dimen/month_header_padding_h">

    <!-- Sun -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/month_header_row_height"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/weekday_sun"
        android:textColor="#FF6B6B"
        android:textSize="@dimen/month_header_text_size"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_bold" />

    <!-- Mon -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/month_header_row_height"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/weekday_mon"
        android:textColor="#C6D4DF"
        android:textSize="@dimen/month_header_text_size"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_bold" />

    <!-- Tue -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/month_header_row_height"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/weekday_tue"
        android:textColor="#C6D4DF"
        android:textSize="@dimen/month_header_text_size"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_bold" />

    <!-- Wed -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/month_header_row_height"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/weekday_wed"
        android:textColor="#C6D4DF"
        android:textSize="@dimen/month_header_text_size"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_bold" />

    <!-- Thu -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/month_header_row_height"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/weekday_thu"
        android:textColor="#C6D4DF"
        android:textSize="@dimen/month_header_text_size"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_bold" />

    <!-- Fri -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/month_header_row_height"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/weekday_fri"
        android:textColor="#C6D4DF"
        android:textSize="@dimen/month_header_text_size"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_bold" />

    <!-- Sat -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/month_header_row_height"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/weekday_sat"
        android:textColor="#6FA8FF"
        android:textSize="@dimen/month_header_text_size"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_bold" />
</LinearLayout>
