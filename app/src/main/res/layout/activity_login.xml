<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- ë°°ê²½ -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bg_lottie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/main_ground"
        app:lottie_rawRes="@raw/hwwprmbqc9"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ì¹´ë“œ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:maxWidth="380dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#B3282828"
        app:cardUseCompatPadding="true"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/loginCardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <!-- ë¡œê·¸ì¸ íŒ¨ë„ -->
            <LinearLayout
                android:id="@+id/loginPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- ìƒë‹¨ ì•¡ì…˜ í–‰: ìš°ì¸¡ ìƒë‹¨ì— ðŸŒ ì–¸ì–´ ë²„íŠ¼ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <ImageButton
                        android:id="@+id/btn_lang"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:padding="6dp"
                        android:contentDescription="@string/language"
                        android:src="@drawable/ic_globe_24" />
                </LinearLayout>

                <!-- íƒ€ì´í‹€ -->
                <TextView
                    android:id="@+id/login_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/jalnan"
                    android:gravity="center"
                    android:text="@string/home_title"
                    android:textColor="#FABE41"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="@string/login_slogan"
                    android:fontFamily="@font/pretendard_medium"
                    android:textColor="#F8F7F7"
                    android:textSize="14sp"/>

                <!-- ì´ë©”ì¼/ë¹„ë°€ë²ˆí˜¸ -->
                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/login_email_hint"
                    android:textSize="16sp"
                    android:importantForAutofill="yes"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#F7626262"/>

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="12dp"
                    android:autofillHints="password"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/login_password_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textColorHint="#F7626262"/>

                <!-- ë¡œê·¸ì¸ ë²„íŠ¼ -->
                <!-- ë¡œê·¸ì¸ -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_login"
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#00A8A7A7"
                    android:minHeight="43dp"
                    android:text="@string/login_btn_login"
                    android:fontFamily="@font/pretendard_bold"
                    android:textAllCaps="false"
                    android:textColor="#FDC450"
                    android:clickable="true"
                    android:focusable="true"
                    app:cornerRadius="20dp"
                    app:rippleColor="#33FFFFFF"
                    style="@style/Widget.MaterialComponents.Button" />

                <!-- ë§í¬ í–‰ -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/row_links"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp">

                    <TextView
                        android:id="@+id/dividerSlash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / "
                        android:textColor="#C7C7C7"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/goFindPw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="40dp"
                        android:padding="12dp"
                        android:text="@string/forgot_password"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="#EDEDED"
                        android:textSize="13sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textAlignment="viewEnd"
                        android:gravity="end"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/dividerSlash"
                        app:layout_goneMarginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/goSignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="43dp"
                        android:padding="12dp"
                        android:text="@string/sign_up"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="#EDEDED"
                        android:textSize="13sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        app:layout_constraintStart_toEndOf="@id/dividerSlash"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_goneMarginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- or êµ¬ë¶„ì„  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-25dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#EDEDED"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:text="or"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="#EDEDED"
                        android:textSize="16sp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#EDEDED"/>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!-- êµ¬ê¸€ ë¡œê·¸ì¸ -->
                <ImageButton
                    android:id="@+id/btn_google"
                    android:layout_width="189dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:contentDescription="@string/login_btn_google"
                    android:focusable="true"
                    android:minHeight="43dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_google"/>

                <!-- ì²´í—˜ -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_skip_login"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#00424141"
                    android:minHeight="43dp"
                    android:text="@string/login_btn_guest"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="#FDC450"
                    android:clickable="true"
                    android:focusable="true"
                    app:cornerRadius="20dp"
                    app:rippleColor="#33FFFFFF"
                    style="@style/Widget.MaterialComponents.Button" />
            </LinearLayout>

            <!-- íšŒì›ê°€ìž… íŒ¨ë„ -->
            <LinearLayout
                android:id="@+id/signupPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="28dp"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:text="@string/sign_up_title"
                    android:textColor="#FABE41"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="10dp"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/email_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#999999"/>

                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="10dp"
                    android:autofillHints="newPassword"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/password_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#999999"/>

                <EditText
                    android:id="@+id/signup_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="16dp"
                    android:autofillHints="newPassword"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/password_confirm_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textPassword"
                    android:textColor="#FC000000"
                    android:textColorHint="#999999"/>

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="6dp"
                    android:backgroundTint="#FABE41"
                    android:minHeight="43dp"
                    android:text="@string/sign_up_button"
                    android:textAllCaps="false"
                    android:textColor="#FFF"/>

                <Button
                    android:id="@+id/btn_signup_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:backgroundTint="#EEE"
                    android:minHeight="43dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="#431D56"/>
            </LinearLayout>

            <!-- ë¹„ë°€ë²ˆí˜¸ ì°¾ê¸° íŒ¨ë„ -->
            <LinearLayout
                android:id="@+id/findPwPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="28dp"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:text="@string/password_reset_title"
                    android:textColor="#FABE41"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/findpw_email"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="14dp"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/email_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#999999"/>

                <Button
                    android:id="@+id/btn_findpw"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="6dp"
                    android:backgroundTint="#FABE41"
                    android:minHeight="43dp"
                    android:text="@string/send_reset_email"
                    android:textAllCaps="false"
                    android:textColor="#FFF"/>

                <Button
                    android:id="@+id/btn_findpw_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:backgroundTint="#EEE"
                    android:minHeight="43dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="#431D56"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- í•˜ë‹¨ ë²„ì „/ì •ì±… -->
    <TextView
        android:id="@+id/privacy_and_version"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/privacy_and_version"
        android:textSize="11sp"
        android:textColor="#FBFBFB"
        android:gravity="center"
        android:fontFamily="@font/pretendard_bold"
        android:background="@android:color/transparent"
        android:paddingTop="10dp"
        android:paddingBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
