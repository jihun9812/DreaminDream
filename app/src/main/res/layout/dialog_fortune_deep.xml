<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#1A2433"
    android:padding="12dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="always">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <TextView
                android:id="@+id/tvDeepTitle"
                android:text="심화 분석"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDeepKpis"
                android:layout_marginTop="6dp"
                android:textColor="#B9C7D6"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                android:layout_marginVertical="12dp" android:background="#2B3B4D"/>

            <TextView
                android:id="@+id/tvDeepHighlights"
                android:textColor="#EAF2FA"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                android:layout_marginVertical="12dp" android:background="#2B3B4D"/>

            <TextView
                android:id="@+id/tvDeepPlan"
                android:textColor="#EAF2FA"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                android:layout_marginVertical="12dp" android:background="#2B3B4D"/>

            <TextView
                android:id="@+id/tvDeepTomorrow"
                android:textColor="#EAF2FA"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeepClose"
                style="@style/Widget.Material3.Button.TonalButton"
                android:text="닫기"
                app:backgroundTint="#7A6CF1"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.google.android.material.card.MaterialCardView>
