<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="10dp"
    android:backgroundTint="#142A3B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- 제목 -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI 해몽 준비 중..."
            android:textColor="#E8F1F8"
            android:textSize="17sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- 설명 -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="잠시 후 광고가 로드되면 맞춤 해몽을 보실 수 있습니다."
            android:textColor="#BFD0DC"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <!-- 애니메이션/Progress -->
        <ProgressBar
            android:id="@+id/progressAd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:indeterminate="true"
            android:layout_gravity="center"/>

        <!-- 버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textColor="#FFFFFF"
                app:backgroundTint="#9575CD"
              />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWatchAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="광고 보기"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:cornerRadius="22dp"
                app:backgroundTint="#9575CD"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
