<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground">

    <!-- 설정 -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="68dp"
        android:src="@drawable/ic_setting"
        android:background="@android:color/transparent"
        android:contentDescription="@string/settings"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:id="@+id/content_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/content_side_padding"
        android:paddingEnd="@dimen/content_side_padding"
        android:paddingTop="@dimen/content_vertical_padding"
        android:paddingBottom="@dimen/content_vertical_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintWidth_max="@dimen/max_phone_width">

        <!-- 타이틀 -->
        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/title_margin_bottom"
            android:text="@string/home_title"
            android:fontFamily="@font/jalnan"
            android:textColor="#FABE41"
            android:textSize="@dimen/home_title_size"
            android:maxLines="1"
            android:ellipsize="end"
            android:shadowColor="#FDAC05"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:includeFontPadding="true"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

        <!-- AI 리포트 카드 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ai_report_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FF352D49"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/ai_report"
                    android:src="@drawable/ic_ai_report" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ai_report_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="@string/home_ai_title"
                        android:textColor="#E4E2E2"
                        android:textSize="@dimen/ai_title"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:includeFontPadding="false"/>

                    <TextView
                        android:id="@+id/ai_report_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="@string/home_ai_sub"
                        android:textColor="#C6D4DF"
                        android:textSize="@dimen/ai_sub"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:includeFontPadding="false"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ai_report"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/ai_report_btn"
                    android:textColor="#17212B"
                    android:textSize="@dimen/btn_text"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_gold_gloss_selector"
                    app:rippleColor="#33FFFFFF"
                    app:cornerRadius="14dp"
                    android:elevation="6dp"
                    android:translationZ="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 데일리 메시지 : 한 문단, 절대 안 잘림 -->
        <LinearLayout
            android:id="@+id/character_bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:background="@drawable/bg_bubble_glass"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/ai_avatar"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/home_message"
                android:contentDescription="@string/ai_avatar" />

            <TextView
                android:id="@+id/ai_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_daily_message_sample"
                android:textColor="@color/white"
                android:textSize="@dimen/bubble_text"
                android:fontFamily="@font/pretendard_medium"
                android:includeFontPadding="false"
                android:lineSpacingExtra="3dp"
                android:textAlignment="viewStart"/>
        </LinearLayout>

        <!-- 하단 버튼 3개 -->
        <LinearLayout
            android:id="@+id/button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dream"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:minWidth="0dp"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/btn_dream"
                android:textColor="#17212B"
                android:textSize="@dimen/btn_text"
                app:backgroundTint="@null"
                android:background="@drawable/btn_gold_gloss_selector"
                app:cornerRadius="14dp"
                app:rippleColor="#33FFFFFF"
                app:icon="@drawable/ic_dream"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconSize="@dimen/icon_btn"
                app:iconTint="#17212B"/>

            <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_calendar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:minWidth="0dp"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/btn_calendar"
                android:textColor="#17212B"
                android:textSize="@dimen/btn_text"
                app:backgroundTint="@null"
                android:background="@drawable/btn_gold_gloss_selector"
                app:cornerRadius="14dp"
                app:rippleColor="#33FFFFFF"
                app:icon="@drawable/ic_calendar_moon"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconSize="@dimen/icon_btn"
                app:iconTint="#17212B"/>

            <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fortune"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:minWidth="0dp"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/btn_fortune"
                android:textColor="#17212B"
                android:textSize="@dimen/btn_text"
                app:backgroundTint="@null"
                android:background="@drawable/btn_gold_gloss_selector"
                app:cornerRadius="14dp"
                app:rippleColor="#33FFFFFF"
                app:icon="@drawable/ic_fortune"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconSize="@dimen/icon_btn"
                app:iconTint="#17212B"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
