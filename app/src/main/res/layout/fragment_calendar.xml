<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground"
    android:fitsSystemWindows="true">

    <!--  좌상단 공휴일 라벨 (오버레이, 공간 차지 X) -->
    <TextView
        android:id="@+id/holidayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/titleBar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:textColor="#EB5D56"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_bold"
        android:includeFontPadding="false"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"
        android:translationZ="8dp"/>

    <!-- 상단 타이틀 바 (아이콘만, 월 바는 이 아래로) -->
    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/calendarMoonIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_calendar_moon"
            android:contentDescription="캘린더 아이콘" />
    </LinearLayout>

    <!-- 월 선택 바 (캘린더 위치 고정) -->
    <LinearLayout
        android:id="@+id/monthSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBar"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonPreviousMonth"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_chevron_left"
            android:contentDescription="@string/prev_month"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textViewMonthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025년 7월"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginHorizontal="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"/>

        <ImageButton
            android:id="@+id/buttonNextMonth"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="@string/next_month"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- 달력 카드 -->
    <FrameLayout
        android:id="@+id/calendarWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthSelector"
        android:layout_margin="12dp"
        android:background="@drawable/bg_calendar_rounded"
        android:elevation="8dp"
        android:clipToPadding="false">

        <com.kizitonwose.calendar.view.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cv_dayViewResource="@layout/example_day_view"
            app:cv_monthHeaderResource="@layout/example_month_header" />
    </FrameLayout>

    <!-- 선택한 날짜 요약 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/selectedDayCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarWrapper"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#1AFFFFFF"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/selectedDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_bold"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/selectedDreamPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#CFE3F0"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_medium"
                android:includeFontPadding="false"
                android:maxLines="3"
                android:ellipsize="end"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpenDreamList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                android:minHeight="36dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:text="기록 보기"
                android:textColor="@android:color/white"
                app:cornerRadius="18dp"
                app:backgroundTint="#3D6C89"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 광고 배너 -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1742201279182732/8682841157" />

</RelativeLayout>
