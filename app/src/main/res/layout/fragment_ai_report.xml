<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground"
    android:fitsSystemWindows="true">

    <!-- 비었을 때 -->
    <LinearLayout
        android:id="@+id/empty_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_no_data"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 생성된 리포트가 없습니다.\n이번 주 꿈을 2개 이상 기록해보세요."
            android:textSize="14sp"
            android:textColor="#9FB2C3"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- 중앙 고정 메인 카드 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/report_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adView_ai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.45"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="26dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="14dp"
        app:strokeColor="@color/dd_stroke_card"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/dd_surface_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp">

            <!-- 헤더 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_dream_night"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주간 AI 리포트"
                        android:textColor="#F3F8FC"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/report_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일주일에 꿈 2개 이상 기록 시 자동 생성"
                        android:textColor="#CBDAE4"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/week_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WEEK"
                    android:textColor="#E6F2FA"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:background="@drawable/bg_chip_glass"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:background="#28FFFFFF"/>

            <!-- 내부만 스크롤 -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/card_scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- KPI -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="78dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#2EFFFFFF"
                            android:layout_marginEnd="7dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="긍정"
                                    android:textColor="#99EFD1"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/kpi_positive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="#E7FFF6"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="78dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#2EFFFFFF"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="7dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="중립"
                                    android:textColor="#CFE0EA"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/kpi_neutral"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="#F0F6FB"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="78dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#2EFFFFFF"
                            android:layout_marginStart="7dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="부정"
                                    android:textColor="#FFB0C0"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/kpi_negative"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="#FFD9E1"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- 차트 -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/emotion_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"/>

                    <!-- 감정/키워드 -->
                    <TextView
                        android:id="@+id/text_keywords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="감정/키워드가 여기에 표시됩니다."
                        android:textColor="#CBDAE4"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- 분석 섹션 (행운 박스 스타일) -->
                    <LinearLayout
                        android:id="@+id/analysis_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_deep_section"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="AI 분석"
                                android:textColor="#EAF3FA"
                                android:textStyle="bold"
                                android:textSize="15sp"/>

                            <!-- 점수 배지 -->
                            <TextView
                                android:id="@+id/analysis_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--점"
                                android:textColor="#EAF3FA"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:background="@drawable/bg_deep_dialog"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_ai_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="분석 내용이 여기에 표시됩니다."
                            android:textColor="#F3F8FC"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                    <!-- 지난 주 리포트 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/past_report_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#28FFFFFF"
                        app:cardBackgroundColor="#10FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/past_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="지난 주 리포트"
                                android:textColor="#E3D8FF"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:layout_marginBottom="6dp"/>

                            <TextView
                                android:id="@+id/past_feeling"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="#E8F1F7"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/past_keywords"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="#C9D7E1"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:id="@+id/past_analysis"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="#D8E6F0"
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/btn_delete_past"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="지난 주 리포트 삭제하기"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="13sp"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 하단 광고 -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1742201279182732/8682841157"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
