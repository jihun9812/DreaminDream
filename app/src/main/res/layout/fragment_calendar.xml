<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground"
    android:fitsSystemWindows="true">

    <!-- 좌상단 공휴일 라벨 -->
    <TextView
        android:id="@+id/holidayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/titleBar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:textColor="#EB5D56"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_bold"
        android:includeFontPadding="false"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"
        android:translationZ="8dp"/>

    <!-- 상단 아이콘 -->
    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/calendarMoonIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_calendar_moon"
            android:contentDescription="캘린더 아이콘" />
    </LinearLayout>

    <!-- 월 선택 바 -->
    <LinearLayout
        android:id="@+id/monthSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBar"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonPreviousMonth"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_chevron_left"
            android:contentDescription="@string/prev_month"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textViewMonthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025년 8월"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginHorizontal="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"/>

        <ImageButton
            android:id="@+id/buttonNextMonth"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="@string/next_month"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- 달력 카드 -->
    <FrameLayout
        android:id="@+id/calendarWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthSelector"
        android:layout_margin="12dp"
        android:background="@drawable/bg_calendar_rounded"
        android:elevation="8dp"
        android:clipToPadding="false">

        <com.kizitonwose.calendar.view.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cv_dayViewResource="@layout/example_day_view"
            app:cv_monthHeaderResource="@layout/example_month_header" />
    </FrameLayout>

    <!-- 리스트 타이틀 -->
    <TextView
        android:id="@+id/dreamListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarWrapper"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="6dp"
        android:text="2025-08-25 (월)의 꿈들"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/pretendard_bold"
        android:includeFontPadding="false"/>

    <!-- 비어있을 때 표시 -->
    <TextView
        android:id="@+id/emptyDreamText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dreamListTitle"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="이 날짜의 꿈 기록이 없어요."
        android:textSize="14sp"
        android:textColor="#CFE3F0"
        android:fontFamily="@font/pretendard_medium"
        android:includeFontPadding="false"
        android:visibility="gone"/>

    <!-- 인라인 스크롤 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDreams"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dreamListTitle"
        android:layout_above="@id/adViewCalendar"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        android:paddingBottom="12dp"/>

    <!-- 광고 배너 -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-3dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1742201279182732/8682841157" />

</RelativeLayout>
