<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 배경 -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bg_lottie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/main_ground"
        app:lottie_rawRes="@raw/hwwprmbqc9"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:maxWidth="380dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:cardUseCompatPadding="true"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/loginCardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <!-- 로그인 패널 -->
            <LinearLayout
                android:id="@+id/loginPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- 언어 칩 -->
                <LinearLayout
                    android:id="@+id/langRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chips_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_ko"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipStrokeColor="#FDCA60"
                            android:text="@string/language_korean"
                            app:checkedIconVisible="false"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_en"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipStrokeColor="#FDCA60"
                            android:text="@string/language_english"
                            app:checkedIconVisible="false"/>
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>

                <!-- 타이틀 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/jalnan"
                    android:gravity="center"
                    android:text="@string/home_title"
                    android:textColor="#FABE41"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="@string/login_slogan"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="#666666"
                    android:textSize="14sp"/>

                <!-- 이메일/비밀번호 -->
                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="10dp"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/login_email_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#999999"/>

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="12dp"
                    android:autofillHints="password"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/login_password_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#999999"/>

                <!-- 로그인 버튼 -->
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="140dp"
                    android:layout_height="43dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#FDCA60"
                    android:minHeight="43dp"
                    android:text="@string/login_btn_login"
                    android:fontFamily="@font/pretendard_bold"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <!-- 링크 행: 왼쪽 두 줄 / 가운데 슬래시 / 오른쪽 한 줄 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/row_links"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp">

                    <!-- 가운데 슬래시 -->
                    <TextView
                        android:id="@+id/dividerSlash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / "
                        android:textColor="#888"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <!-- 비밀번호를\n잊으셨나요? (두 줄 고정) -->
                    <TextView
                        android:id="@+id/goFindPw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="40dp"
                        android:padding="12dp"
                        android:text="@string/forgot_password"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="#888"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textAlignment="viewEnd"
                        android:gravity="end"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/dividerSlash"
                        app:layout_goneMarginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <!-- Sign up (한 줄 고정) -->
                    <TextView
                        android:id="@+id/goSignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="43dp"
                        android:padding="12dp"
                        android:text="@string/sign_up"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="#888"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        app:layout_constraintStart_toEndOf="@id/dividerSlash"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_goneMarginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- or 구분선 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#888"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:text="or"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="#888"
                        android:textSize="16sp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#888"/>
                </LinearLayout>

                <!-- 구글 로그인 -->
                <ImageButton
                    android:id="@+id/btn_google"
                    android:layout_width="189dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:contentDescription="@string/login_btn_google"
                    android:focusable="true"
                    android:minHeight="43dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_google"/>

                <!-- 체험 -->
                <Button
                    android:id="@+id/btn_skip_login"
                    android:layout_width="140dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FDCA60"
                    android:minHeight="43dp"
                    android:text="@string/login_btn_guest"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <!-- 회원가입 패널 -->
            <LinearLayout
                android:id="@+id/signupPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="28dp"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:text="@string/sign_up_title"
                    android:textColor="#FABE41"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="10dp"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/email_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#999999"/>

                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="10dp"
                    android:autofillHints="newPassword"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/password_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#999999"/>

                <EditText
                    android:id="@+id/signup_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="16dp"
                    android:autofillHints="newPassword"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/password_confirm_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textPassword"
                    android:textColor="#FC000000"
                    android:textColorHint="#999999"/>

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="6dp"
                    android:backgroundTint="#FABE41"
                    android:minHeight="43dp"
                    android:text="@string/sign_up_button"
                    android:textAllCaps="false"
                    android:textColor="#FFF"/>

                <Button
                    android:id="@+id/btn_signup_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:backgroundTint="#EEE"
                    android:minHeight="43dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="#431D56"/>
            </LinearLayout>

            <!-- 비밀번호 찾기 패널 -->
            <LinearLayout
                android:id="@+id/findPwPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="28dp"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:text="@string/password_reset_title"
                    android:textColor="#FABE41"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/findpw_email"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="14dp"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/email_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#999999"/>

                <Button
                    android:id="@+id/btn_findpw"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="6dp"
                    android:backgroundTint="#FABE41"
                    android:minHeight="43dp"
                    android:text="@string/send_reset_email"
                    android:textAllCaps="false"
                    android:textColor="#FFF"/>

                <Button
                    android:id="@+id/btn_findpw_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:backgroundTint="#EEE"
                    android:minHeight="43dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="#431D56"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- 하단 버전/정책 -->
    <TextView
        android:id="@+id/privacy_and_version"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/privacy_and_version"
        android:textSize="11sp"
        android:textColor="#FBFBFB"
        android:gravity="center"
        android:fontFamily="@font/pretendard_bold"
        android:background="@android:color/transparent"
        android:paddingTop="10dp"
        android:paddingBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
