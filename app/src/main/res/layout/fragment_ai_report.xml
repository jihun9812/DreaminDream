<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground"
    android:fitsSystemWindows="true"
    android:forceDarkAllowed="false"
    android:paddingStart="@dimen/content_side_padding"
    android:paddingEnd="@dimen/content_side_padding">

    <!-- Empty -->
    <LinearLayout
        android:id="@+id/empty_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_no_data"/>

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_sm"
            android:textColor="#9FB2C3"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Report Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/report_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adView_ai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_max="@dimen/ai_card_max_width"
        app:cardCornerRadius="@dimen/ai_card_corner"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="@dimen/ai_card_elevation"
        app:strokeColor="#403B4A"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="#FF352D49">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/card_pad"
            android:paddingEnd="@dimen/card_pad"
            android:paddingTop="@dimen/card_pad"
            android:paddingBottom="@dimen/card_pad">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/ai_icon"
                    android:layout_height="@dimen/ai_icon"
                    android:src="@drawable/ic_chart"/>

                <TextView
                    android:id="@+id/week_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="이번 주 분석 리포트\n0건 · -"
                    android:textColor="#E6F2FA"
                    android:textStyle="bold"
                    android:textSize="@dimen/ai_sub"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/btn_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="32dp"
                    android:background="@drawable/bg_chip_glass"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="분석 기록 ▼"
                    android:textColor="#E6F2FA"
                    android:textSize="@dimen/text_xs"
                    android:textStyle="bold"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/divider_margin_top"
                android:layout_marginBottom="@dimen/divider_margin_bottom"
                android:background="#FFD54F"/>

            <!-- Scrollable Content -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/card_scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- KPIs -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/kpi_card_height"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#2EFFFFFF"
                            android:layout_marginEnd="@dimen/kpi_gap_h">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="긍정"
                                    android:textColor="#99EFD1"
                                    android:textSize="@dimen/kpi_label"/>

                                <TextView
                                    android:id="@+id/kpi_positive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/kpi_value"
                                    android:textColor="#E7FFF6"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/kpi_card_height"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#2EFFFFFF"
                            android:layout_marginStart="@dimen/kpi_gap_h"
                            android:layout_marginEnd="@dimen/kpi_gap_h">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="중립"
                                    android:textColor="#CFE0EA"
                                    android:textSize="@dimen/kpi_label"/>

                                <TextView
                                    android:id="@+id/kpi_neutral"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/kpi_value"
                                    android:textColor="#F0F6FB"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/kpi_card_height"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#2EFFFFFF"
                            android:layout_marginStart="@dimen/kpi_gap_h">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="부정"
                                    android:textColor="#FFB0C0"
                                    android:textSize="@dimen/kpi_label"/>

                                <TextView
                                    android:id="@+id/kpi_negative"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/kpi_value"
                                    android:textColor="#FFD9E1"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- 감정 섹션 헤더 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="@dimen/section_margin_bottom">

                        <TextView
                            android:id="@+id/chart_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="감정 밸런스"
                            android:textColor="#FDCA60"
                            android:textStyle="bold"
                            android:textSize="@dimen/section_title_text"/>

                        <ImageButton
                            android:id="@+id/btn_chart_info"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:contentDescription="설명"
                            android:background="@android:color/transparent"
                            android:padding="6dp"
                            android:scaleType="centerInside"
                            app:tint="#FBCC50"
                            app:srcCompat="@android:drawable/ic_dialog_info" />
                    </LinearLayout>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/emotion_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/chart_emotion_height"
                        android:layout_marginBottom="@dimen/section_margin_bottom"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"/>

                    <!-- 주요 테마 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주요 테마"
                        android:textColor="#FDCA60"
                        android:textStyle="bold"
                        android:textSize="@dimen/section_title_text"
                        android:layout_marginTop="@dimen/section_margin_top"
                        android:layout_marginBottom="@dimen/section_margin_bottom"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/theme_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/chart_theme_height"
                        android:layout_marginBottom="@dimen/section_margin_bottom"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"/>

                    <!-- 캡션 & 키워드 -->
                    <TextView
                        android:id="@+id/chart_caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="주간 전체 꿈 기반 자동 요약"
                        android:textColor="#FDCA60"
                        android:textSize="@dimen/caption_text"
                        android:layout_marginBottom="@dimen/section_margin_bottom"/>

                    <TextView
                        android:id="@+id/text_keywords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="감정/키워드가 여기에 표시됩니다."
                        android:textColor="#CBDAE4"
                        android:textSize="@dimen/body_text"
                        android:layout_marginBottom="@dimen/section_margin_bottom"/>

                    <!-- 심화 분석 버튼 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pro_upgrade"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginTop="@dimen/section_margin_top"
                        android:text="심화 분석하기"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_sm"
                        android:textStyle="bold"
                        app:cornerRadius="@dimen/btn_radius"
                        android:backgroundTint="#FDCA60"
                        android:textColor="#352D00"/>

                    <!-- AI 분석 카드 -->
                    <LinearLayout
                        android:id="@+id/analysis_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_deep_section"
                        android:orientation="vertical"
                        android:padding="@dimen/card_pad"
                        android:layout_marginTop="@dimen/section_margin_top">

                        <TextView
                            android:id="@+id/analysis_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI 분석"
                            android:textColor="#FDCA60"
                            android:textStyle="bold"
                            android:textSize="@dimen/section_title_text"/>

                        <TextView
                            android:id="@+id/text_ai_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="분석 내용이 여기에 표시됩니다."
                            android:textColor="#F3F8FC"
                            android:textSize="@dimen/body_text"
                            android:lineSpacingExtra="@dimen/body_line_space"
                            android:lineSpacingMultiplier="1.12"
                            android:letterSpacing="0.01"
                            android:includeFontPadding="false"
                            android:breakStrategy="balanced"
                            android:hyphenationFrequency="normal"
                            android:justificationMode="inter_word"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Ad (Bottom-Center LOCKED) -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="12dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1742201279182732/8682841157"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="0dp" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/pro_spinner"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:visibility="gone"
        app:indicatorSize="28dp"
        app:trackThickness="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/report_card"
        app:layout_constraintEnd_toEndOf="@+id/report_card"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
