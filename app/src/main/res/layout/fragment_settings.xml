<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9E5"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="뒤로가기"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 중앙 상징 아이콘 (겹치지 않도록 marginTop 사용) -->
    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="-40dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- ScrollView 안에 모든 사용자 입력 UI -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/settings_icon"
        app:layout_constraintBottom_toTopOf="@id/adView_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/label_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="#444444" />

            <EditText
                android:id="@+id/edit_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="닉네임을 입력해주세요"
                android:autofillHints="name"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:background="@drawable/bg_fade"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/label_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edit_birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="예: 1998년 7월 6일 (월)"
                android:focusable="false"
                android:clickable="true"
                android:autofillHints="birthDate"
                android:textColor="#000000"
                android:background="@drawable/bg_fade"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/label_birthtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="태어난 시간"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinner_birthtime"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:background="@drawable/bg_fade"
                android:popupBackground="@drawable/bg_fade"
                android:padding="2dp"
                android:layout_marginBottom="12dp" />


            <TextView
                android:id="@+id/label_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/radioGroup_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <RadioButton
                    android:id="@+id/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남성"
                    android:layout_marginEnd="24dp" />
                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성" />
            </RadioGroup>

            <TextView
                android:id="@+id/label_mbti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MBTI"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edit_MBTI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MBTI를 입력하세요 (예: INFP)"
                android:autofillHints="none"
                android:inputType="textCapCharacters"
                android:textColor="#000000"
                android:background="@drawable/bg_fade"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="#FFA07A"
                android:text="저장하기"
                android:textColor="@color/black"
                style="@style/GlassButton" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:backgroundTint="#FEF6E4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/text_info_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내 프로필"
                        android:textColor="#4A148C"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/text_user_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />

                    <ProgressBar
                        android:id="@+id/progress_saving"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        style="?android:attr/progressBarStyleLarge" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textSize="13sp"
                android:textColor="#888888"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>

    <!-- 광고 -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1742201279182732/8682841157"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
