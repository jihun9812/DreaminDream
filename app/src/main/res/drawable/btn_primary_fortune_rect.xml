<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#465AE8"
                android:centerColor="#7B67F5"
                android:endColor="#B278FF"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
</ripple>
