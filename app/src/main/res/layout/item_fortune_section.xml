<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginTop="10dp"
    android:background="#1A2433">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSectionTitle"
            android:text="총운"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvScoreBadge"
            android:text="80점"
            android:textColor="#0C1830"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/sectionIndicator"
        style="@style/Widget.Material3.LinearProgressIndicator"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        app:trackThickness="8dp"
        app:indicatorColor="#17D499"
        app:trackColor="#2B3B4D"/>

    <TextView
        android:id="@+id/tvSectionBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#EAF2FA"
        android:textSize="14sp"
        android:layout_marginTop="8dp"/>
</LinearLayout>
