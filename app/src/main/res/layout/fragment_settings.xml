<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/main_ground">

    <!-- 하단 배너 광고 -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/ad_unit_settings_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 로그아웃 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/btn_logout"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:cornerRadius="12dp"
        app:backgroundTint="#00FDCA60"
        app:rippleColor="#33FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/adView_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 스크롤 영역 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="0dp">

            <LinearLayout
                android:id="@+id/panel_box"
                android:layout_width="@dimen/panel_box_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_panel_glass"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- ============ 앱 설정 카드 ============ -->
                <LinearLayout
                    android:id="@+id/card_app_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:background="@android:color/transparent">

                    <!-- 섹션 타이틀 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_title"
                        android:textColor="#FDCA60"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:letterSpacing="0.01"/>

                    <!-- 요약 -->
                    <TextView
                        android:id="@+id/tvAppProfileSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:lineSpacingExtra="2dp"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        app:dividerColor="#33FFFFFF"/>

                    <!-- 간단 통계 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#1AFFFFFF"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:id="@+id/quickStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="4dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingVertical="6dp">

                                <TextView
                                    android:id="@+id/tvGptUsageLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/gpt_usage_today"
                                    android:textColor="#B4FBFB"
                                    android:textSize="12sp"/>
                                <TextView
                                    android:id="@+id/tvGptUsageValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/value_placeholder_dash"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="20sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingVertical="6dp">

                                <TextView
                                    android:id="@+id/tvDreamCountLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dream_count"
                                    android:textColor="#B4FBFB"
                                    android:textSize="12sp"/>
                                <TextView
                                    android:id="@+id/tvDreamCountValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/value_placeholder_dash"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="20sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ===== 설정 ===== -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/settings_section"
                        android:textColor="#FDCA60"
                        android:textSize="12sp"/>

                    <!-- 프로필 편집 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_profile_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/btn_profile_edit"
                        android:textAllCaps="false"
                        android:textColor="#1D142E"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#FDCA60"
                        app:rippleColor="#22FFFFFF"/>

                    <!-- 프리미엄 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_premium"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="0dp"
                        android:text="@string/btn_premium"
                        android:textAllCaps="false"
                        android:textColor="#B4FBFB"
                        android:textSize="14sp"
                        app:iconPadding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@android:color/transparent"/>

                    <!-- 문의/피드백 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_contact"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="0dp"
                        android:text="@string/btn_contact"
                        android:textAllCaps="false"
                        android:textColor="#B4FBFB"
                        android:textSize="14sp"
                        app:iconPadding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@android:color/transparent"/>

                    <!-- 약관/개인정보 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_terms"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="0dp"
                        android:text="@string/btn_terms"
                        android:textAllCaps="false"
                        android:textColor="#B4FBFB"
                        android:textSize="14sp"
                        app:iconPadding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@android:color/transparent"
                        app:rippleColor="#22FFFFFF"/>

                    <!-- 계정 삭제 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_delete_account"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="2dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="0dp"
                        android:text="@string/btn_delete_account"
                        android:textAllCaps="false"
                        android:textColor="#FF6B6B"
                        android:textSize="14sp"
                        app:iconPadding="0dp"
                        app:cornerRadius="10dp"
                        app:backgroundTint="@android:color/transparent"
                        app:rippleColor="#33FF6B6B"/>

                    <!-- ── 여기부터 언어 섹션 삭제됨 ── -->

                    <!-- 계정 통합(구글) -->
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        app:dividerColor="#1FFFFFFF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/label_account_link"
                        android:textColor="#FDCA60"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_account_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/account_status_default"
                        android:textColor="#B3FFFFFF"
                        android:textSize="13sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_link_google"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/btn_google_link"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        app:icon="@drawable/google_logo"
                        app:iconTint="@null"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#DCDCDC"
                        app:rippleColor="#22000000"/>

                    <ProgressBar
                        android:id="@+id/progress_account_link"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/account_link_note"
                        android:textColor="#80FFFFFF"
                        android:textSize="11sp"/>
                </LinearLayout>

                <!-- ===== (옵션) 프로필 편집 카드 ===== -->
                <LinearLayout
                    android:id="@+id/card_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="20dp"
                    android:background="@android:color/transparent">

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_profile_edit"
                        android:textColor="#FDCA60"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:letterSpacing="0.02"
                        android:paddingBottom="8dp"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:dividerColor="#44FDCA60"/>

                    <!-- 이름 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/label_name"
                        android:textColor="#FABE41"
                        android:textSize="12sp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="#FDCA60"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="44dp"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="10dp"
                            android:hint="@string/hint_name_example"
                            android:inputType="textPersonName|textCapWords"
                            android:imeOptions="flagNoFullscreen|actionDone"
                            android:textColor="#E8F1F8"
                            android:textColorHint="#B3FFFFFF"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 생년월일 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_birthdate"
                        android:textColor="#FABE41"
                        android:textSize="12sp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="#FDCA60"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_birthdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="44dp"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="10dp"
                            android:hint="@string/hint_birthdate_format"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="#E8F1F8"
                            android:textColorHint="#B3FFFFFF"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 성별 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_gender"
                        android:textColor="#FABE41"
                        android:textSize="12sp"/>

                    <RadioGroup
                        android:id="@+id/radio_group_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <RadioButton
                            android:id="@+id/radio_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gender_male"
                            android:textColor="#FABE41"
                            android:buttonTint="#37C2D0"
                            android:textSize="16sp"
                            android:layout_marginEnd="16dp"/>

                        <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gender_female"
                            android:textColor="#FABE41"
                            android:buttonTint="#37C2D0"
                            android:textSize="16sp"/>
                    </RadioGroup>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:dividerColor="#44FDCA60"/>

                    <!-- MBTI -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_mbti"
                        android:textColor="#FABE41"
                        android:textSize="12sp"/>

                    <Spinner
                        android:id="@+id/spinner_mbti"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:spinnerMode="dropdown"/>

                    <!-- 출생시간 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_birthtime"
                        android:textColor="#FABE41"
                        android:textSize="12sp"/>

                    <Spinner
                        android:id="@+id/spinner_birthtime"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:spinnerMode="dropdown"/>

                    <!-- 취소/저장 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="4dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:paddingHorizontal="14dp"
                            android:text="@string/btn_cancel"
                            android:textAllCaps="false"
                            android:textColor="#212121"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:backgroundTint="#C7C7C7"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_save"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingHorizontal="14dp"
                            android:text="@string/btn_save"
                            android:textAllCaps="false"
                            android:textColor="#212121"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:backgroundTint="#EBBB57"/>
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progress_saving"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
