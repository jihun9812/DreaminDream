<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground"
    android:fitsSystemWindows="true">

    <!-- 월 이동 헤더 -->
    <LinearLayout
        android:id="@+id/monthSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/calendar_top_margin"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <ImageButton
            android:id="@+id/buttonPreviousMonth"
            android:layout_width="@dimen/calendar_nav_button_size"
            android:layout_height="@dimen/calendar_nav_button_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_chevron_left"
            android:contentDescription="@string/prev_month"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textViewMonthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025년 9월"
            android:textSize="@dimen/month_text"
            android:textStyle="bold"
            android:textColor="#FABE41"
            android:layout_marginHorizontal="@dimen/month_title_h_margin"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false" />

        <ImageButton
            android:id="@+id/buttonNextMonth"
            android:layout_width="@dimen/calendar_nav_button_size"
            android:layout_height="@dimen/calendar_nav_button_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="@string/next_month"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- 공휴일 라벨 -->
    <TextView
        android:id="@+id/holidayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthSelector"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textColor="#EB5D56"
        android:textSize="@dimen/text_xs"
        android:fontFamily="@font/pretendard_bold"
        android:includeFontPadding="false"
        android:visibility="gone"
        android:translationZ="8dp" />

    <!-- 달력 카드(배경 적용) -->
    <FrameLayout
        android:id="@+id/calendarWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/holidayTextView"
        android:layout_marginStart="@dimen/calendar_side_margin"
        android:layout_marginEnd="@dimen/calendar_side_margin"
        android:layout_marginTop="@dimen/calendar_top_margin"
        android:layout_marginBottom="@dimen/calendar_bottom_margin"
        android:background="@drawable/bg_calendar_rounded"
        android:elevation="8dp"
        android:clipToPadding="false">

        <com.kizitonwose.calendar.view.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cv_dayViewResource="@layout/example_day_view"
            app:cv_monthHeaderResource="@layout/example_month_header" />
    </FrameLayout>

    <!-- 꿈 리스트 타이틀 -->
    <TextView
        android:id="@+id/dreamListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarWrapper"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:text="2025-09-12 (금)의 꿈들"
        android:textSize="@dimen/list_title"
        android:textColor="#FFD54F"
        android:fontFamily="@font/pretendard_bold"
        android:includeFontPadding="false" />

    <!-- 빈 리스트 안내 -->
    <TextView
        android:id="@+id/emptyDreamText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dreamListTitle"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="이 날짜의 꿈 기록이 없어요."
        android:textSize="@dimen/text_md"
        android:textColor="#CFE3F0"
        android:fontFamily="@font/pretendard_medium"
        android:includeFontPadding="false"
        android:visibility="gone" />

    <!-- 꿈 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDreams"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dreamListTitle"
        android:layout_above="@id/adViewCalendar"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        android:paddingBottom="12dp" />

    <!-- 광고: 최하단 중앙 고정 -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1742201279182732/8682841157" />

</RelativeLayout>
