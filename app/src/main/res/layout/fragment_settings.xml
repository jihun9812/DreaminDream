<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/main_ground">

    <!-- í•˜ë‹¨ ë°°ë„ˆ ê´‘ê³  -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/ad_unit_settings_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ë¡œê·¸ì•„ì›ƒ -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/btn_logout"
        android:textAllCaps="false"
        android:fontFamily="@font/pretendard_medium"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:cornerRadius="12dp"
        app:backgroundTint="#00FDCA60"
        app:rippleColor="#33FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/adView_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ìŠ¤í¬ë¡¤ ì˜ì—­ -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="20dp"
            android:paddingBottom="0dp">

            <LinearLayout
                android:id="@+id/panel_box"
                android:layout_width="@dimen/panel_box_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_panel_glass"
                android:orientation="vertical"
                android:padding="17dp">

                <!-- ============ ì•± ì„¤ì • ì¹´ë“œ ============ -->
                <LinearLayout
                    android:id="@+id/card_app_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <!-- ì„¹ì…˜ íƒ€ì´í‹€ -->
                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.01"
                        android:text="@string/settings_title"
                        android:textColor="#FDCA60"
                        android:textSize="18sp"
                        android:fontFamily="@font/pretendard_bold" />

                    <!-- ===== í”„ë¡œí•„ í—¤ë”(ë  ì•„ì´ì½˜ ì•„ë°”íƒ€) ===== -->
                    <LinearLayout
                        android:id="@+id/profile_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- ë  ì´ëª¨ì§€ ì•„ë°”íƒ€ (í…ìŠ¤íŠ¸ ëŒ€ì‹  ì•„ì´ì½˜ë§Œ ë…¸ì¶œ) -->
                        <TextView
                            android:id="@+id/tvZodiacAvatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:gravity="center"
                            android:text="ðŸ§¿"
                            android:textSize="34sp"
                            android:includeFontPadding="false"
                            android:background="#00FFFFFF"
                            android:padding="6dp"
                            android:letterSpacing="0"
                            android:textColor="#FFFFFF"
                            android:layout_marginEnd="12dp"
                            android:clipToOutline="true" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvProfileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/value_placeholder_dash"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="@font/pretendard_bold" />

                            <TextView
                                android:id="@+id/tvProfileSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text=""
                                android:textColor="#B3FFFFFF"
                                android:textSize="12sp"
                                android:fontFamily="@font/pretendard_medium" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- ìš”ì•½(ë  í…ìŠ¤íŠ¸ ë¼ì¸ ì œê±°ë¨) -->
                    <TextView
                        android:id="@+id/tvAppProfileSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        app:dividerColor="#AE4A4B4B" />

                    <!-- ê°„ë‹¨ í†µê³„ -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardBackgroundColor="#1AFFFFFF"
                        app:cardCornerRadius="12dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:id="@+id/quickStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="4dp"
                            android:paddingVertical="8dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingVertical="6dp">

                                <TextView
                                    android:id="@+id/tvGptUsageLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/gpt_usage_today"
                                    android:textColor="#A6E9E8"
                                    android:fontFamily="@font/pretendard_medium"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvGptUsageValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/value_placeholder_dash"
                                    android:fontFamily="@font/pretendard_medium"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingVertical="6dp">

                                <TextView
                                    android:id="@+id/tvDreamCountLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dream_count"
                                    android:fontFamily="@font/pretendard_medium"
                                    android:textColor="#A6E9E8"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvDreamCountValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/value_placeholder_dash"
                                    android:fontFamily="@font/pretendard_medium"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ===== ì„¤ì • ===== -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/settings_section"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="#EDDF90"
                        android:textSize="12sp" />

                    <!-- í”„ë¡œí•„ íŽ¸ì§‘ -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_profile_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:gravity="start|center_vertical"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:paddingStart="0dp"
                        android:text="@string/btn_profile_edit"
                        android:textAllCaps="false"
                        android:textColor="#88E6E3"
                        android:textSize="14sp"
                        app:backgroundTint="@android:color/transparent"
                        app:cornerRadius="10dp"
                        android:fontFamily="@font/pretendard_medium"
                        app:iconPadding="0dp"
                        app:rippleColor="#22FFFFFF" />

                    <!-- í”„ë¦¬ë¯¸ì—„ -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_premium"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:gravity="start|center_vertical"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:paddingStart="0dp"
                        android:text="@string/btn_premium"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_medium"
                        app:backgroundTint="@android:color/transparent"
                        app:cornerRadius="10dp"
                        app:iconPadding="0dp" />

                    <!-- ë¬¸ì˜/í”¼ë“œë°± -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_contact"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="start|center_vertical"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:paddingStart="0dp"
                        android:text="@string/btn_contact"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_medium"
                        app:backgroundTint="@android:color/transparent"
                        app:cornerRadius="10dp"
                        app:iconPadding="0dp" />

                    <!-- ì•½ê´€/ê°œì¸ì •ë³´ -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_terms"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="start|center_vertical"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:paddingStart="0dp"
                        android:text="@string/btn_terms"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_medium"
                        app:backgroundTint="@android:color/transparent"
                        app:cornerRadius="10dp"
                        app:iconPadding="0dp"
                        app:rippleColor="#22FFFFFF" />

                    <!-- ê³„ì • ì‚­ì œ -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_delete_account"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="2dp"
                        android:gravity="start|center_vertical"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:paddingStart="0dp"
                        android:text="@string/btn_delete_account"
                        android:textAllCaps="false"
                        android:textColor="#CE3434"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_medium"
                        app:backgroundTint="@android:color/transparent"
                        app:cornerRadius="10dp"
                        app:iconPadding="0dp"
                        app:rippleColor="#33FD0101" />

                    <!-- ê³„ì • í†µí•©(êµ¬ê¸€) -->
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        app:dividerColor="#AE4A4B4B"  />

                    <TextView
                        android:id="@+id/label_account_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/label_account_link"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="#EDDF90"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_account_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/account_status_default"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="#B3FFFFFF"
                        android:textSize="13sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_link_google"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/btn_google_link"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        app:backgroundTint="#DCDCDC"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/google_logo"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconTint="@null"
                        app:rippleColor="#22000000" />

                    <ProgressBar
                        android:id="@+id/progress_account_link"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/account_link_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/account_link_note"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="#80FFFFFF"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- ===== (ì˜µì…˜) í”„ë¡œí•„ íŽ¸ì§‘ ì¹´ë“œ ===== -->
                <LinearLayout
                    android:id="@+id/card_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/title_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.02"
                        android:paddingBottom="8dp"
                        android:text="@string/btn_profile_edit"
                        android:textColor="#FDCA60"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:dividerColor="#44494949"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/label_name"
                        android:textColor="#FABE41"
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="#FAFDCA60"
                        app:boxStrokeWidth="0.5dp"
                        app:boxStrokeWidthFocused="1dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_name_example"
                            android:imeOptions="flagNoFullscreen|actionDone"
                            android:inputType="textPersonName|textCapWords"
                            android:minHeight="44dp"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="10dp"
                            android:textColor="#E8F1F8"
                            android:textColorHint="#C2FFFFFF"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- ìƒë…„ì›”ì¼ -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_birthdate"
                        android:textColor="#FABE41"
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="#FDCA60"
                        app:boxStrokeWidth="0.5dp"
                        app:boxStrokeWidthFocused="1dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_birthdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:hint="@string/hint_birthdate_format"
                            android:minHeight="44dp"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="10dp"
                            android:textColor="#E8F1F8"
                            android:textColorHint="#B3FFFFFF"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- ì„±ë³„ -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_gender"
                        android:textColor="#FABE41"
                        android:textSize="12sp" />

                    <RadioGroup
                        android:id="@+id/radio_group_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:buttonTint="#37C2D0"
                            android:text="@string/gender_male"
                            android:textColor="#FABE41"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#37C2D0"
                            android:text="@string/gender_female"
                            android:textColor="#FABE41"
                            android:textSize="16sp" />
                    </RadioGroup>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:dividerColor="#44494949" />

                    <!-- MBTI -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_mbti"
                        android:textColor="#FABE41"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/spinner_mbti"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:spinnerMode="dropdown" />

                    <!-- ì¶œìƒì‹œê°„ -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_birthtime"
                        android:textColor="#FABE41"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/spinner_birthtime"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:spinnerMode="dropdown" />

                    <!-- ì·¨ì†Œ/ì €ìž¥ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:paddingHorizontal="14dp"
                            android:text="@string/btn_cancel"
                            android:textAllCaps="false"
                            android:textColor="#212121"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:backgroundTint="#C7C7C7"
                            app:cornerRadius="10dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_save"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingHorizontal="14dp"
                            android:text="@string/btn_save"
                            android:textAllCaps="false"
                            android:textColor="#212121"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:backgroundTint="#EBBB57"
                            app:cornerRadius="10dp" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progress_saving"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
