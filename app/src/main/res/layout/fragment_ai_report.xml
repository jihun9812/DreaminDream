<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingTop="24dp"
        android:paddingBottom="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adView_ai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:gravity="center_horizontal">

            <!-- ✅ Empty 상태 레이아웃 -->
            <LinearLayout
                android:id="@+id/empty_icon_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/empty_icon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_no_data"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/empty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아직 생성된 리포트가 없습니다."
                    android:textSize="14sp"
                    android:textColor="#90A1AD"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- 이번 주 리포트 카드 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/report_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#F6F7F9"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="20dp">

                    <!-- 헤더 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/main_symbol"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_dream_night"
                            android:contentDescription="@string/app_name"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/title_report"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="주간 꿈 리포트"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#0B1F2A"/>

                            <TextView
                                android:id="@+id/report_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="일주일에 꿈 2개 이상 기록 시 AI 리포트가 생성됩니다."
                                android:textColor="#90A1AD"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="12dp"
                        android:background="#14000000"/>

                    <!-- KPI 3열 카드 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="72dp"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:elevation="2dp"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="긍정"
                                android:textColor="#2F6B3A"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/kpi_positive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#2F6B3A"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="72dp"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:elevation="2dp"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="6dp"
                            android:layout_marginStart="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="중립"
                                android:textColor="#5B6770"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/kpi_neutral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#5B6770"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="72dp"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:elevation="2dp"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginStart="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="부정"
                                android:textColor="#8A2A2A"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/kpi_negative"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#8A2A2A"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 차트 -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/emotion_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginBottom="12dp"
                        android:background="@android:color/transparent"
                        android:elevation="6dp"/>

                    <!-- 키워드/감정 -->
                    <TextView
                        android:id="@+id/text_keywords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="감정/키워드가 여기에 표시됩니다."
                        android:textSize="14sp"
                        android:textColor="#108C6B"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="10dp"
                        android:lineSpacingExtra="1dp"/>

                    <!-- 분석 블록 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:elevation="2dp"
                        android:padding="12dp">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="#3A69FF"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/text_ai_comment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="AI 분석 내용이 여기에 표시됩니다."
                            android:textSize="15sp"
                            android:textColor="#0D2230"
                            android:lineSpacingExtra="3dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 지난 주 리포트 -->
            <LinearLayout
                android:id="@+id/past_report_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F8F9FB"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:elevation="3dp">

                <TextView
                    android:id="@+id/past_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지난 주 리포트"
                    android:textColor="#4A2C8C"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/past_feeling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="#4B5963"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/past_keywords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="#6A7D88"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/past_analysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="#5A6570"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/btn_delete_past"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지난 주 리포트 삭제하기"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 하단 광고 -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1742201279182732/8682841157"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
