<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_ground"
    android:fitsSystemWindows="true"
    android:forceDarkAllowed="false">

    <!-- Empty -->
    <LinearLayout
        android:id="@+id/empty_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_no_data"/>
        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 생성된 리포트가 없습니다.\n이번 주 꿈을 2개 이상 기록해보세요."
            android:textSize="14sp"
            android:textColor="#9FB2C3"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Report Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/report_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        android:forceDarkAllowed="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adView_ai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.40"
        app:cardCornerRadius="26dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="12dp"
        app:strokeColor="#454545"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="#FF352D49">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="16dp"
            android:paddingBottom="14dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_chart"/>

                <TextView
                    android:id="@+id/week_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="이번 주 분석 리포트\n0건 · -"
                    android:textColor="#E6F2FA"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/btn_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분석 기록 ▼"
                    android:textColor="#E6F2FA"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:background="@drawable/bg_chip_glass"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:background="#FFD54F"/>

            <!-- Scrollable Content -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/card_scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- KPI Summaries -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="78dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#2EFFFFFF"
                            android:layout_marginEnd="7dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="긍정"
                                    android:textColor="#99EFD1"
                                    android:textSize="12sp"/>
                                <TextView
                                    android:id="@+id/kpi_positive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="#E7FFF6"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="78dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#2EFFFFFF"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="7dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="중립"
                                    android:textColor="#CFE0EA"
                                    android:textSize="12sp"/>
                                <TextView
                                    android:id="@+id/kpi_neutral"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="#F0F6FB"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="78dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#2EFFFFFF"
                            android:layout_marginStart="7dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="부정"
                                    android:textColor="#FFB0C0"
                                    android:textSize="12sp"/>
                                <TextView
                                    android:id="@+id/kpi_negative"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="#FFD9E1"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- 감정 섹션 헤더 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:id="@+id/chart_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="감정 밸런스"
                            android:textColor="#FDCA60"
                            android:textStyle="bold"
                            android:textSize="15sp"/>

                        <ImageButton
                            android:id="@+id/btn_chart_info"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:contentDescription="설명"
                            android:background="@android:color/transparent"
                            android:padding="6dp"
                            android:scaleType="centerInside"
                            app:tint="#FBCC50"
                            app:srcCompat="@android:drawable/ic_dialog_info" />
                    </LinearLayout>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/emotion_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"/>

                    <!-- 주요 테마 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주요 테마"
                        android:textColor="#FDCA60"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="6dp"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/theme_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginBottom="6dp"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"/>

                    <!-- 키워드/캡션 -->
                    <TextView
                        android:id="@+id/chart_caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="주간 전체 꿈 기반 자동 요약"
                        android:textColor="#FDCA60"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/text_keywords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="감정/키워드가 여기에 표시됩니다."
                        android:textColor="#CBDAE4"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <!-- 심화 분석 버튼 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pro_upgrade"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:text="심화 분석"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:cornerRadius="18dp"
                        android:backgroundTint="#FDCA60"
                        android:textColor="#352D00"/>

                    <!-- AI 분석 카드 -->
                    <LinearLayout
                        android:id="@+id/analysis_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_deep_section"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/analysis_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI 분석"
                            android:textColor="#FDCA60"
                            android:textStyle="bold"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/text_ai_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="분석 내용이 여기에 표시됩니다."
                            android:textColor="#F3F8FC"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1742201279182732/8682841157"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ✅ PRO 로더 오버레이 (터치 차단 & 최상단) -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/pro_loader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:lottie_rawRes="@raw/just_flow_teal"
        app:lottie_loop="true"
        app:lottie_autoPlay="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
