<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 배경 애니메이션 -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bg_lottie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E12A1E49"
        app:lottie_rawRes="@raw/hwwprmbqc9"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:scaleType="centerCrop"
        android:alpha="0.85"/>

    <!-- 중앙 로그인 카드뷰 (모든 내용 이 안에만!) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:cardUseCompatPadding="true">

        <FrameLayout
            android:id="@+id/loginCardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- 로그인 패널 -->
            <LinearLayout
                android:id="@+id/loginPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- 타이틀/슬로건 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/jalnan"
                    android:gravity="center"
                    android:text="@string/home_title"
                    android:textColor="#FABE41"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="@string/login_slogan"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="#431D56"
                    android:textSize="14sp" />

                <!-- 이메일/비밀번호 -->
                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/login_email_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#999999" />

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:autofillHints="password"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/login_password_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#999999" />



                <!-- 회원가입/비번찾기 (로그인 버튼 바로 아래) -->
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#FDCA60"
                    android:minHeight="48dp"
                    android:text="@string/login_btn_login"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/goFindPw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:text="@string/forgot_password"
                        android:textColor="#888"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:paddingStart="0dp"
                        android:paddingEnd="4dp"
                        android:text=" / "
                        android:textColor="#888"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/goSignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:text="@string/sign_up"
                        android:textColor="#888"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 구분선과 or (구글 버튼 위에 명확하게) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#888" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:text="or"
                        android:textColor="#888"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#888" />
                </LinearLayout>

                <!-- 구글 로그인 버튼 (ImageButton으로 복원) -->

                <ImageButton
                    android:id="@+id/btn_google"
                    android:layout_width="189dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:contentDescription="@string/login_btn_google"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_google" />

                <Button
                    android:id="@+id/btn_skip_login"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FDCA60"
                    android:minHeight="48dp"
                    android:text="체험"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </LinearLayout>

            <!-- 회원가입 패널 -->
            <LinearLayout
                android:id="@+id/signupPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="28dp"
                android:visibility="gone">

                <!-- X 닫기 버튼 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_signup_close"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="end"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:contentDescription="닫기"
                        android:focusable="true"
                        android:padding="0dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_close" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:text="@string/sign_up_title"
                    android:textColor="#FABE41"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/email_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#999999" />

                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:autofillHints="newPassword"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/password_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#999999" />

                <EditText
                    android:id="@+id/signup_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:autofillHints="newPassword"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/password_confirm_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#999999" />

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="6dp"
                    android:backgroundTint="#FABE41"
                    android:minHeight="48dp"
                    android:text="@string/sign_up_button"
                    android:textAllCaps="false"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/btn_signup_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="#EEE"
                    android:minHeight="48dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="#431D56" />
            </LinearLayout>

            <!-- 비밀번호 찾기 패널 -->
            <LinearLayout
                android:id="@+id/findPwPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="28dp"
                android:visibility="gone">

                <!-- X 닫기 버튼 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_findpw_close"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="end"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:contentDescription="닫기"
                        android:focusable="true"
                        android:padding="0dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_close" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:text="@string/password_reset_title"
                    android:textColor="#FABE41"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/findpw_email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="14dp"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/edittext_bg_blur"
                    android:hint="@string/email_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#999999" />

                <Button
                    android:id="@+id/btn_findpw"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="6dp"
                    android:backgroundTint="#FABE41"
                    android:minHeight="48dp"
                    android:text="@string/send_reset_email"
                    android:textAllCaps="false"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/btn_findpw_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="#EEE"
                    android:minHeight="48dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="#431D56"  />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- 하단 개인정보/버전 -->
    <TextView
        android:id="@+id/privacy_and_version"
        android:text="@string/privacy_and_version"
        android:textSize="11sp"
        android:textColor="#000000"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingTop="10dp"
        android:paddingBottom="24dp" />

</FrameLayout>