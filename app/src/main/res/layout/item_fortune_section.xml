<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:clipToPadding="false"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:strokeColor="#40FFFFFF"
    app:strokeWidth="1dp">

    <!-- 유리(Glass) 느낌 배경 + 둥근 모서리 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@drawable/bg_glass_fortune_section">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSectionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="총운"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- 둥근 배지 -->
            <TextView
                android:id="@+id/tvScoreBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:minHeight="28dp"
                android:background="@drawable/bg_score_pill"
                android:text="80점"
                android:textColor="#0C1830"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- 둥근 프로그레스바(트랙 라운딩) -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/sectionIndicator"
            style="@style/Widget.Material3.LinearProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            app:indicatorColor="#17D499"
            app:trackColor="#2B3B4D"
            app:trackThickness="8dp"
            app:trackCornerRadius="999dp"/>

        <TextView
            android:id="@+id/tvSectionBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#EAF2FA"
            android:textSize="14sp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
